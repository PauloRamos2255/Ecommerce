@model Entidad.Clientes
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <title>Registro de Usuario</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link href="~/Content/registro.css" rel="stylesheet" />
    <link rel="shortcut icon" href="/imagenes/logo.jpg" type="image/x-">
</head>
<body>
    <style>
        /* Estilo para el combo box */
        .form-select {
            height: 45px; /* Puedes ajustar la altura según tus necesidades */
            font-size: 16px; /* Ajusta el tamaño de fuente si es necesario */
            font-weight: bold; /* Ajusta el peso de fuente si es necesario */
        }
        .container-fluid {
            min-height: 100vh; /* Establece la altura mínima al 100% del viewport para hacer el formulario más alto */
            margin-left: 100px;
        }

        /* Estilo para el formulario .card */
        .card {
            height: 820px; /* Puedes ajustar la altura según tus necesidades */
            width: 90%; /* Aumenta el ancho del formulario */
            max-width: 500px; /* Establece un ancho máximo para que no se vuelva demasiado grande en pantallas grandes */
            margin-left: 300px;
            margin: 50px auto; /* Agrega márgenes superior e inferior para separar el formulario del borde de la pantalla */
            padding: 50px; /* Agrega un espacio interno para dar separación entre los elementos del formulario */
        }

        /* Estilo para el logo */
        .logo-image {
            max-width: 100%; /* Hace que el logo se ajuste al tamaño máximo del contenedor */
        }

        /* Estilo para el título del formulario */
        .form-title {
            text-align: center; /* Centra el título horizontalmente */
        }
        body, html {
            margin: 0;
            padding: 0;
            overflow: hidden; /* Desactiva el desplazamiento vertical y horizontal */
        }
        .custom-margin {
            margin-top: -25px; /* Puedes ajustar este valor según tus necesidades */
        }
    </style>
    <div class="login">
        <section class="vh-100">
            <div class="container-fluid h-custom">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-md-9 col-lg-6 col-xl-5">
                        <img src="/imagenes/logo.jpg"
                             class="img-fluid" alt="Sample image">
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <form action="@Url.Action("Registrar","Home")" method="post">
                                <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start text-dark  row custom-margin">
                                    <h2 class="text-center fw-bold">REGISTRATE </h2>
                                    <h2 class="text-center fw-bold">AQUI </h2>
                                </div>
                                <br />
                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @id = "form3Example3", @placeholder = "Nombre", value = ViewData["Nombres"] })
                                </div>
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(p => p.Apellido, new { @class = "form-control", @id = "form3Example3", @placeholder = "Apellido", value = ViewData["Apellidos"] })
                                </div>
                                <div class="form-outline mb-4">
                                    @Html.TextBoxFor(c => c.Correo, new { @class = "form-control", @id = "form3Example3", @placeholder = "Correo", value = ViewData["Correo"] })
                                </div>
                                <div class="form-outline mb-4">
                                    @Html.PasswordFor(cl => cl.Contraseña, new { @class = "form-control", @id = "form3Example3", @placeholder = "Escribir una contraseña" })
                                </div>
                                <div class="form-outline mb-4">
                                    @Html.PasswordFor(cc => cc.ConfirmarClave, new { @class = "form-control", @id = "form3Example3", @placeholder = "Vuelva a poner su contraseña" })
                                </div>
                                <div class="form-outline mb-4">
                                    <select class="form-select border border-primary" id="sexoSelect" name="sexo">
                                        <option value="0" disabled selected>Seleccione</option>
                                        <option value="1">Masculino</option>
                                        <option value="2">Femenino</option>
                                    </select>
                                </div>
                                <br />
                                <button type="submit" class="btn btn-primary btn-lg"
                                        style="width: 360px;">
                                    Registrarte
                                </button>
                                <br />
                                <br />
                                @{
                                    if (ViewBag.Error != null)
                                    {
                                        <div class="form-floating mb-2">
                                            <div class="alert alert-danger" role="alert">
                                                @ViewBag.Error
                                            </div>
                                        </div>
                                    }
                                }
                                <div class="text-center py-3">
                                    <div class="small"><a href="@Url.Action("Index","Home")">¿Ya tienes una cuenta? Iniciar Sesion</a></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>

</html>
