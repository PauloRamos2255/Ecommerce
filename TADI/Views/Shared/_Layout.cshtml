<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="shortcut icon" href="/imagenes/logo.jpg" type="image/x-">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-danger fixed-top mb-5">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Menu","Home")"><img src="/imagenes/logo.jpg" alt="" width="40px"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between align-items-center" id="navbarSupportedContent">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Menu","Home")">Inicio</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="#contactanos">
                            Contactanos
                        </a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Buscar Producto" aria-label="Search" size="60">
                    <button class="btn btn-outline-light" type="submit">Buscar</button>
                </form>
                <div class="d-flex">
                    <div class="cart">
                        <button href="#">Carrito<i class="bi bi-cart-check-fill"></i></button>
                    </div>
                    <div class="user">
                        <button onclick="myFunction()" class="btn">
                            User <i class="bi bi-person-circle"></i>
                        </button>

                    </div>

                </div>
            </div>
        </div>
    </nav>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4 ">
                @RenderBody()
            </div>
        </main>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/complementos")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
